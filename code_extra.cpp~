/// @file code_extra.cpp
/// @author Rixen Usam
/// @date 5/14/23
/// @brief
/// @note Read in the file and find the the word EXTRA


#include <iostream>
#include <fstream>
#include <cmath>
#include <complex>
#include <cctype>
#include <string>


using namespace std;



int main()
{
    string data;
    string msg[5] = {};
    char c;
    int i = 0;

    ifstream infile;
    infile.open("hidden.txt");

    while (!infile.eof())
    {
        infile.get(c);
        if (isalpha(c))
        {
            msg[i] = c;
            i++;
        }
    }

    infile.close();

    for (int j = 0; j < i; j++)
    {
        cout << msg[j];
    }

    cout << endl;

    return (0);

}
