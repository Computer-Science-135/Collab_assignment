/// @note Read in the file and convert the hex values and then display the same
///       matrix with decimal numbers.


#include <iostream>
#include <fstream>
#include <cmath>
#include <complex>
#include <cctype>
#include <string>
#include <iomanip>

using namespace std;



int main()
{
    string data;
    int k[10][10] = {{}, {}, {}, {}, {}, {}, {}, {}, {}, {}};
    ifstream infile;
    infile.open("hex_table.txt");

    while (!infile.eof())
    {
        for (int i = 0; i < 10; i++)
        {
            for (int j = 0; j < 10; j++)
            {
                getline(infile, data, ' ');
                k[i][j] = stoi(data, 0, 16);
                cout << left << setw(4) << k[i][j] << " ";
            }
        cout << endl;
        }
    }

    infile.close();

    return (0);

}
